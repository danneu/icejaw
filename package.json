{
  "name": "icejaw",
  "description": "generate a static website from a dynamic one",
  "version": "0.0.12",
  "main": "src/index.js",
  "bin": "bin/icejaw",
  "scripts": {
    "lint": "./node_modules/.bin/eslint src test",
    "pretest": "npm run lint",
    "test": "ava",
    "patch": "npm version patch && npm publish",
    "minor": "npm version minor && npm publish",
    "major": "npm version major && npm publish",
    "postpublish": "git push origin master --follow-tags",
    "deploy": "git pull --rebase origin master && git push origin master"
  },
  "dependencies": {
    "bluebird": "^3.4.6",
    "chalk": "^1.1.3",
    "commander": "^2.9.0",
    "event-stream": "^3.3.4",
    "gulp": "^3.9.1",
    "node-fetch": "^1.6.3",
    "promise-task-queue": "^1.2.0",
    "rimraf": "^2.5.4",
    "vinyl": "^2.0.0"
  },
  "devDependencies": {
    "ava": "^0.16.0",
    "koa": "^1.2.4",
    "koa-router": "^5.4.0",
    "eslint": "^3.9.0",
    "eslint-config-standard": "^6.2.1",
    "eslint-plugin-promise": "^3.3.0",
    "eslint-plugin-standard": "^2.0.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danneu/icejaw.git"
  },
  "author": "Dan Neumann <danrodneu@gmail.com> (https://github.com/danneu)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/danneu/icejaw/issues"
  },
  "homepage": "https://github.com/danneu/icejaw"
}
