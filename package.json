{
    "name": "icejaw",
    "description": "generate a static website from a dynamic one",
    "version": "0.0.18",
    "main": "src/index.js",
    "bin": "bin/icejaw",
    "scripts": {
        "lint": "./node_modules/.bin/eslint .",
        "pretest": "npm run lint",
        "test": "./node_modules/.bin/ava",
        "patch": "npm version patch && npm publish",
        "minor": "npm version minor && npm publish",
        "major": "npm version major && npm publish",
        "prepublish": "dependency-check package.json",
        "postpublish": "git push origin master --follow-tags",
        "deploy": "git pull --rebase origin master && git push origin master",
        "pretty-fix": "prettier --write \"{src,test}/**/*.js\""
    },
    "dependencies": {
        "better-assert": "^1.0.2",
        "bluebird": "^3.4.6",
        "chalk": "^2.3.0",
        "commander": "^2.9.0",
        "create-error": "^0.3.1",
        "debug": "^3.1.0",
        "event-stream": "^3.3.4",
        "node-fetch": "^2.2.0",
        "orchestrator": "^0.3.7",
        "promise-task-queue": "^1.2.0",
        "rimraf": "^2.5.4",
        "vinyl": "^2.0.0",
        "vinyl-fs": "^3.0.3"
    },
    "prettier": {
        "tabWidth": 4,
        "semi": false,
        "printWidth": 100,
        "singleQuote": true,
        "trailingComma": "es5",
        "arrowParens": "always"
    },
    "devDependencies": {
        "ava": "^0.25.0",
        "dependency-check": "^2.6.0",
        "koa": "^2.4.1",
        "koa-router": "^7.3.0",
        "temp": "^0.8.3"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/danneu/icejaw.git"
    },
    "author": "Dan Neumann (https://github.com/danneu)",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/danneu/icejaw/issues"
    },
    "homepage": "https://github.com/danneu/icejaw"
}
